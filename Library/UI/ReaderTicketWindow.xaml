<Window x:Class="UI.ReaderTicketWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Читательский билет" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
           x:Name="TicketTitleText"
           FontSize="20" FontWeight="Bold" 
           HorizontalAlignment="Center" 
           Margin="0,0,0,20"/>

        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Background="LightBlue" 
                Padding="10" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Читатель:" 
                           FontWeight="Bold" 
                           Margin="0,0,5,5"/>
                <TextBlock Grid.Row="0" Grid.Column="1" 
                           x:Name="ReaderNameText" 
                           Margin="0,0,0,5"/>

                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Дата рождения:" 
                           FontWeight="Bold" 
                           Margin="0,0,5,5"/>
                <TextBlock Grid.Row="1" Grid.Column="1" 
                           x:Name="BirthdayText" 
                           Margin="0,0,0,5"/>

                <TextBlock Grid.Row="2" Grid.Column="2" 
                           Text="Номер телефона:" 
                           FontWeight="Bold" 
                           Margin="0,0,5,5"/>
                <TextBlock Grid.Row="2" Grid.Column="3" 
                           x:Name="PhoneNumberText" 
                           Margin="0,0,0,5"/>

                <TextBlock Grid.Row="0" Grid.Column="2" 
                           Text="Email:" 
                           FontWeight="Bold" 
                           Margin="0,0,5,5"/>
                <TextBlock Grid.Row="0" Grid.Column="3" 
                           x:Name="EmailText" 
                           Margin="0,0,0,5"/>
            </Grid>
        </Border>

        <GroupBox Grid.Row="2" 
                  Header="Книги в прокате" 
                  Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Панель фильтрации -->
                <StackPanel Grid.Row="0" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,5"
                            VerticalAlignment="Center">
                    
          <CheckBox
          Content="Только книги в прокате"
          VerticalAlignment="Center"
          Margin="0,0,10,0"
          Checked="CheckBox_Changed"
          Unchecked="UnCheckBox_Changed"/>
                </StackPanel>

                <!-- Таблица прокатов -->
                <DataGrid Grid.Row="1"
                          x:Name="LoansDataGrid" 
                          AutoGenerateColumns="False"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True"
                          SelectionMode="Single"
                          SelectionChanged="LoansDataGrid_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="№ проката" 
                                          Binding="{Binding Id}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Название книги" 
                                          Binding="{Binding Book.Title}" 
                                          Width="200"/>
                        <DataGridTextColumn Header="Автор" 
                                          Binding="{Binding Book.Author}" 
                                          Width="200"/>
                        <DataGridTextColumn Header="Дата выдачи" 
                                          Binding="{Binding IssuanceDate, StringFormat=dd.MM.yyyy}" 
                                          Width="90"/>
                        <DataGridTextColumn Header="Дата возврата" 
                                          Binding="{Binding ReturnDate, StringFormat=dd.MM.yyyy}" 
                                          Width="90"/>
                        <DataGridTextColumn Header="Статус" 
                                          Binding="{Binding Status}" 
                                          Width="80"/>
                        <DataGridTextColumn Header="Стоимость проката" 
                                          Binding="{Binding FinalPrice, StringFormat={}{0} руб.}" 
                                          Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </GroupBox>

        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">

            <Button x:Name="IssueBookButton" 
                    Content="Выдать книгу" 
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Click="IssueBookButton_Click"/>

            <Button x:Name="ReturnBookButton" 
                    Content="Принять книгу" 
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Click="ReturnBookButton_Click"
                    IsEnabled="False"/>

            <Button x:Name="CloseButton" 
                    Content="Закрыть" 
                    Padding="15,5"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>