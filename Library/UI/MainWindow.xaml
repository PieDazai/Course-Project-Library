<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Библиотека" Height="400" Width="600"
        WindowStartupLocation="CenterScreen">
    <Grid Background="LightBlue">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Библиотечная система проката книг" 
                   FontSize="20" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="10" Foreground="DarkBlue"/>

        <!-- Основная область с кнопками -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <Button x:Name="btnCatalog" Content="Каталог книг" 
                    Height="40" Margin="10,5" FontSize="14" 
                    Click="Catalog_Click" Background="LightSteelBlue"/>

            <Button x:Name="btnReaders" Content="Читатели" 
                    Height="40" Margin="10,5" FontSize="14"
                    Click="User_Click" Background="LightSteelBlue"/>

            <Button x:Name="btnIssueBook" Content="Выдать книгу" 
                    Height="40" Margin="10,5" FontSize="14"
                    Click="IssueBook_Click" Background="LightGreen"/>

            <Button x:Name="btnReturnBook" Content="Принять книгу" 
                    Height="40" Margin="10,5" FontSize="14"
                    Click="ReturnBook_Click" Background="LightCoral"/>

            <Button x:Name="btnExit" Content="Выход" 
                    Height="40" Margin="10,5" FontSize="14"
                    Click="Exit_Click" Background="LightGray"/>
        </StackPanel>

    </Grid>
</Window>
