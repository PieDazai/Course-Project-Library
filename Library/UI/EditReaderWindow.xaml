<Window x:Class="UI.EditReaderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Редактирование читателя" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   x:Name="WindowTitleText"
                   Text="Добавление нового читателя" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <ScrollViewer Grid.Row="1" 
                      VerticalScrollBarVisibility="Auto" 
                      Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="ФИО:*" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <TextBox Grid.Row="0" Grid.Column="1" 
                         x:Name="FullNameTextBox" 
                         Height="30" 
                         Padding="5"
                         Margin="0,0,0,10"/>

                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Адрес:*" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         x:Name="AddressTextBox" 
                         Height="30" 
                         Padding="5"
                         Margin="0,0,0,10"/>

                <TextBlock Grid.Row="2" Grid.Column="0" 
                           Text="Телефон:*" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <TextBox Grid.Row="2" Grid.Column="1" 
                         x:Name="PhoneTextBox" 
                         Height="30" 
                         Padding="5"
                         Margin="0,0,0,10"/>


                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Email:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <TextBox Grid.Row="3" Grid.Column="1" 
                         x:Name="EmailTextBox" 
                         Height="30" 
                         Padding="5"
                         Margin="0,0,0,10"/>

                <TextBlock Grid.Row="4" Grid.Column="0" 
                           Text="Дата рождения:*" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <DatePicker Grid.Row="4" Grid.Column="1" 
                           x:Name="BirthDatePicker" 
                           Height="30" 
                           Margin="0,0,0,10"/>

                <TextBlock Grid.Row="5" Grid.Column="0" 
                           Text="Категория:*" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,10"/>
                <ComboBox Grid.Row="5" Grid.Column="1" 
                          x:Name="CategoryComboBox" 
                          Height="30" 
                          Padding="5"
                          DisplayMemberPath="Denomination"
                          Margin="0,0,0,10"/>

                <Border Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2"
                        x:Name="ValidationBorder" 
                        BorderBrush="LightGray" 
                        BorderThickness="1" 
                        Background="White" 
                        Padding="10" 
                        Margin="0,10,0,0">
                    <TextBlock x:Name="ValidationText" 
                               Text="Заполните все обязательные поля" 
                               Foreground="Gray" 
                               TextWrapping="Wrap"/>
                </Border>
            </Grid>
        </ScrollViewer>

        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">

            <Button x:Name="SaveButton" 
                    Content="Сохранить" 
                    Padding="20,10"
                    Margin="0,0,15,0"
                    Background="Green"
                    Foreground="White"
                    FontWeight="Bold"
                    IsEnabled="False"/>

            <Button x:Name="CloseButton" 
                    Content="Закрыть" 
                    Padding="20,10"/>
        </StackPanel>
    </Grid>
</Window>