<Window x:Class="UI.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Оплата" Height="600" Width="900"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Оплата услуг" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1" 
                Background="LightGreen"
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Padding="15" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Тип операции:" 
                           FontWeight="Bold" 
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" 
                           x:Name="OperationTypeText" 
                           Margin="0,0,20,0"/>

                <TextBlock Grid.Column="2" 
                           Text="Сумма к оплате:" 
                           FontWeight="Bold" 
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="3" 
                           x:Name="AmountText" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="Green" Height="21" VerticalAlignment="Bottom"/>
            </Grid>
        </Border>

        <GroupBox Grid.Row="2" 
                  Header="Данные для оплаты" 
                  Margin="0,0,0,20">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="150"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Способ оплаты:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                          x:Name="PaymentMethodComboBox" 
                          Height="30"
                          Margin="0,0,0,15"
                          SelectionChanged="PaymentMethodComboBox_SelectionChanged">
                    <ComboBoxItem Content="Банковская карта" IsSelected="True"/>
                    <ComboBoxItem Content="Наличные"/>
                </ComboBox>

                <!-- Поля для банковской карты -->
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                            x:Name="CardPaymentPanel"
                            Margin="0,0,0,15">
                    <TextBlock Text="Номер карты:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,0,5"/>
                    <TextBox x:Name="CardNumberTextBox" 
                             Height="30" 
                             Padding="5"
                             MaxLength="19"/>

                    <StackPanel Orientation="Horizontal" 
                                Margin="0,10,0,0">
                        <TextBlock Text="Срок действия:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="ExpiryDateTextBox" 
                                 Width="80" 
                                 Height="30" 
                                 Padding="5"
                                 MaxLength="5"
                                 Margin="0,0,30,0"/>

                        <TextBlock Text="CVV:" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,10,0"/>
                        <TextBox x:Name="CvvTextBox" 
                                 Width="60" 
                                 Height="30" 
                                 Padding="5"
                                 MaxLength="3"/>
                    </StackPanel>
                </StackPanel>

                <!-- Сообщение для наличной оплаты -->
                <TextBlock Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                           x:Name="CashMessageText" 
                           Text="Оплата наличными будет произведена при получении услуги." 
                           VerticalAlignment="Center" 
                           FontStyle="Italic"
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Visibility="Collapsed"
                           Margin="0,10,0,0"/>
            </Grid>
        </GroupBox>

        <Border Grid.Row="3" 
                x:Name="ValidationBorder" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Background="White" 
                Padding="10" 
                Margin="0,0,0,15">
            <TextBlock x:Name="ValidationText" 
                       Text="Заполните все обязательные поля для оплаты картой" 
                       Foreground="Gray" 
                       TextWrapping="Wrap"/>
        </Border>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">
            <Button x:Name="PayButton" 
                    Content="Оплатить" 
                    Padding="20,10"
                    Margin="0,0,15,0"
                    Click="PayButton_Click"
                    Background="Green"
                    Foreground="White"
                    FontWeight="Bold"/>
            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Padding="20,10"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>