<Window x:Class="UI.PaymentWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Оплата" Height="500" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" 
                   Text="Оплата услуг" 
                   FontSize="24" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <Border Grid.Row="1" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Background="WhiteSmoke" 
                Padding="15" 
                Margin="0,0,0,20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="Тип операции:" 
                           FontWeight="Bold" 
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="1" 
                           x:Name="OperationTypeText" 
                           Margin="0,0,20,0"/>

                <TextBlock Grid.Column="2" 
                           Text="Сумма к оплате:" 
                           FontWeight="Bold" 
                           Margin="0,0,10,0"/>
                <TextBlock Grid.Column="3" 
                           x:Name="AmountText" 
                           FontSize="16" 
                           FontWeight="Bold" 
                           Foreground="Green"/>
            </Grid>
        </Border>

        <GroupBox Grid.Row="2" 
                  Header="Данные для оплаты" 
                  Margin="0,0,0,20">
            <Grid Margin="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Способ оплаты:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <ComboBox Grid.Row="0" Grid.Column="1" 
                          x:Name="PaymentMethodComboBox" 
                          Height="30"
                          Margin="0,0,0,15"
                          SelectionChanged="PaymentMethodComboBox_SelectionChanged">
                    <ComboBoxItem Content="Банковская карта" IsSelected="True"/>
                    <ComboBoxItem Content="Наличные"/>
                    <ComboBoxItem Content="Электронный кошелек"/>
                    <ComboBoxItem Content="Мобильный платеж"/>
                </ComboBox>


                <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Номер карты:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <TextBox Grid.Row="1" Grid.Column="1" 
                         x:Name="CardNumberTextBox" 
                         Height="30" 
                         Padding="5"
                         MaxLength="19"
                         TextChanged="CardNumberTextBox_TextChanged"
                         Margin="0,0,0,15"/>

                <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                            Orientation="Horizontal" 
                            Margin="0,0,0,15">
                    <TextBlock Text="Срок действия:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBox x:Name="ExpiryDateTextBox" 
                             Width="80" 
                             Height="30" 
                             Padding="5"
                             MaxLength="5"
                             Text="MM/YY"
                             GotFocus="ExpiryDateTextBox_GotFocus"
                             LostFocus="ExpiryDateTextBox_LostFocus"
                             TextChanged="ExpiryDateTextBox_TextChanged"
                             Margin="0,0,30,0"/>

                    <TextBlock Text="CVV:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,10,0"/>
                    <TextBox x:Name="CvvTextBox" 
                             Width="60" 
                             Height="30" 
                             Padding="5"
                             MaxLength="3"
                             TextChanged="CvvTextBox_TextChanged"/>
                </StackPanel>

                <TextBlock Grid.Row="3" Grid.Column="0" 
                           Text="Держатель карты:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"/>
                <TextBox Grid.Row="3" Grid.Column="1" 
                         x:Name="CardHolderTextBox" 
                         Height="30" 
                         Padding="5"
                         TextChanged="CardHolderTextBox_TextChanged"
                         Margin="0,0,0,15"/>

                <TextBlock Grid.Row="4" Grid.Column="0" 
                           x:Name="WalletText" 
                           Text="Номер кошелька:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,15"
                           Visibility="Collapsed"/>
                <TextBox Grid.Row="4" Grid.Column="1" 
                         x:Name="WalletTextBox" 
                         Height="30" 
                         Padding="5"
                         Visibility="Collapsed"
                         Margin="0,0,0,15"/>

                <TextBlock Grid.Row="5" Grid.Column="0" 
                           x:Name="PhoneText" 
                           Text="Номер телефона:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,10,0"
                           Visibility="Collapsed"/>
                <TextBox Grid.Row="5" Grid.Column="1" 
                         x:Name="PhoneTextBox" 
                         Height="30" 
                         Padding="5"
                         Visibility="Collapsed"/>
            </Grid>
        </GroupBox>

        <Border Grid.Row="3" 
                x:Name="ValidationBorder" 
                BorderBrush="LightGray" 
                BorderThickness="1" 
                Background="White" 
                Padding="10" 
                Margin="0,0,0,15">
            <TextBlock x:Name="ValidationText" 
                       Text="Заполните все обязательные поля" 
                       Foreground="Gray" 
                       TextWrapping="Wrap"/>
        </Border>

        <StackPanel Grid.Row="4" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">

            <Button x:Name="PayButton" 
                    Content="Оплатить" 
                    Padding="20,10"
                    Margin="0,0,15,0"
                    Click="PayButton_Click"
                    Background="Green"
                    Foreground="White"
                    FontWeight="Bold"
                    IsEnabled="False"/>

            <Button x:Name="CancelButton" 
                    Content="Отмена" 
                    Padding="20,10"
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>