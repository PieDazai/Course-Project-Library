<Window x:Class="UI.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
       Title="Каталог книг" Height="450" Width="850"
       WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Каталог книг" 
                  FontSize="18" FontWeight="Bold" 
                  HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Панель поиска -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <!-- Поиск по названию -->
            <TextBlock Text="Название:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtTitleSearch" Width="150" Height="25" 
                    ToolTip="Поиск по названию книги"/>

            <!-- Поиск по автору -->
            <TextBlock Text="Автор:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <TextBox x:Name="txtAuthorSearch" Width="150" Height="25"
                    ToolTip="Поиск по автору книги"/>

            <!-- Поиск по жанру -->
            <TextBlock Text="Жанр:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <TextBox x:Name="txtGenreSearch" Width="120" Height="25"
                     ToolTip="Фильтр по жанру книги"/>

            <!-- Кнопки -->
            <Button x:Name="btnSearch" Content="Поиск" 
                   Margin="10,0,0,0" Width="70" Height="25"
                   Click="Search_Click"/>
            
            <Button x:Name="btnClearFilters" Content="Сбросить" 
                   Margin="10,0,0,0" Width="70" Height="25"
                   Click="ClearFilters_Click"/>
            
        </StackPanel>

        <!-- Таблица книг -->
        <DataGrid x:Name="DataGridBooks" Grid.Row="2" 
                 AutoGenerateColumns="False" 
                 CanUserAddRows="False"
                 IsReadOnly="True"
                 SelectionMode="Single"
                 SelectionChanged="Books_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="135"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author}" Width="135"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="100"/>
                <DataGridTextColumn Header="Год издания" Binding="{Binding PublishedYear}" Width="80"/>
                <DataGridTextColumn Header="Доступно" Binding="{Binding AvailableCopies}" Width="70"/>
                <DataGridTextColumn Header="Всего" Binding="{Binding TotalCopies}" Width="60"/>
                <DataGridTextColumn Header="Стеллаж" Binding="{Binding RackNumber}" Width="60"/>
                <DataGridTextColumn Header="Стоимость проката" Binding="{Binding RentalCost, StringFormat={}{0} руб/день}" Width="120"/>
                <DataGridTextColumn Header="Депозит" Binding="{Binding Deposit, StringFormat={}{0} руб}" Width="60"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnAddBook" Content="Добавить книгу" 
                   Width="120" Height="30" Margin="0,0,10,0"
                   Click="AddBook_Click" Background="LightGreen"/>

            <Button x:Name="btnEditBook" Content="Редактировать" 
                   Width="120" Height="30" Margin="0,0,10,0"
                   Click="EditBook_Click" Background="LightBlue"
                   IsEnabled="False"/>

            <Button x:Name="btnDeleteBook" Content="Удалить" 
                   Width="80" Height="30" Margin="0,0,10,0"
                   Click="DeleteBook_Click" Background="LightCoral"
                   IsEnabled="False"/>

            <Button x:Name="btnClose" Content="Закрыть" 
                   Width="80" Height="30"
                   Click="Close_Click" Background="PaleVioletRed"/>
        </StackPanel>
    </Grid>
</Window>