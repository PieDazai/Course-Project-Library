<Window x:Class="UI.BookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
       Title="Каталог книг" Height="450" Width="800"
       WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Grid.Row="0" Text="Каталог книг" 
                  FontSize="18" FontWeight="Bold" 
                  HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <!-- Панель поиска и фильтров -->
        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
            <TextBlock Text="Поиск:" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox x:Name="txtSearch" Width="200" Height="25" 
                    TextChanged="Search_TextChanged"
                    ToolTip="Поиск по названию или автору"/>

            <TextBlock Text="Жанр:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="cmbGenre" Width="150" Height="25"
                     SelectionChanged="Genre_SelectionChanged"/>

            <Button x:Name="btnClearFilters" Content="Сбросить" 
                   Margin="20,0,0,0" Width="80" Height="25"
                   Click="ClearFilters_Click"/>
        </StackPanel>

        <!-- Таблица с книгами -->
        <DataGrid x:Name="DataGridBooks" Grid.Row="2" 
                 AutoGenerateColumns="False" 
                 CanUserAddRows="False"
                 SelectionMode="Single"
                 SelectionChanged="Books_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" Binding="{Binding Title}" Width="200"/>
                <DataGridTextColumn Header="Автор" Binding="{Binding Author}" Width="150"/>
                <DataGridTextColumn Header="Жанр" Binding="{Binding Genre}" Width="120"/>
                <DataGridTextColumn Header="Доступно" Binding="{Binding Count}" Width="70"/>
                <DataGridTextColumn Header="Всего" Binding="{Binding Count}" Width="70"/>
                <DataGridTextColumn Header="Стеллаж" Binding="{Binding RackNumber}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Панель кнопок -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="btnAddBook" Content="Добавить книгу" 
                   Width="120" Height="30" Margin="0,0,10,0"
                   Click="AddBook_Click" Background="LightGreen"/>

            <Button x:Name="btnEditBook" Content="Редактировать" 
                   Width="120" Height="30" Margin="0,0,10,0"
                   Click="EditBook_Click" Background="LightBlue"
                   IsEnabled="False"/>

            <Button x:Name="btnDeleteBook" Content="Удалить" 
                   Width="80" Height="30" Margin="0,0,10,0"
                   Click="DeleteBook_Click" Background="LightCoral"
                   IsEnabled="False"/>

            <Button x:Name="btnClose" Content="Закрыть" 
                   Width="80" Height="30"
                   Click="Close_Click" Background="LightGray"/>
        </StackPanel>
    </Grid>
</Window>
