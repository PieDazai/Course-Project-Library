<Window x:Class="UI.IssueBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI"
        mc:Ignorable="d"
        Title="Выдача книги читателю" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок формы -->
        <TextBlock Grid.Row="0" 
                   Text="Выдача книги" 
                   FontSize="20" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- Информация о читателе -->
        <Border Grid.Row="1" 
                BorderBrush="LightBlue" 
                BorderThickness="1" 
                Background="AliceBlue" 
                Padding="10" 
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Информация о читателе:" 
                           FontWeight="Bold" 
                           Margin="0,0,0,5"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" 
                           Text="Читатель:" 
                           FontWeight="Bold" 
                           Margin="0,0,5,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" 
                           x:Name="ReaderNameText" 
                           Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" 
                           Text="Дата рождения:" 
                           FontWeight="Bold" 
                           Margin="0,0,5,5"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" 
                           x:Name="BirthdayText" 
                           Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="2" Grid.Column="2" 
                           Text="Номер телефона:" 
                           FontWeight="Bold" 
                           Margin="0,0,5,5"/>
                    <TextBlock Grid.Row="2" Grid.Column="3" 
                           x:Name="PhoneNumberText" 
                           Margin="0,0,0,5"/>

                    <TextBlock Grid.Row="0" Grid.Column="2" 
                           Text="Email:" 
                           FontWeight="Bold" 
                           Margin="0,0,5,5"/>
                    <TextBlock Grid.Row="0" Grid.Column="3" 
                           x:Name="EmailText" 
                           Margin="0,0,0,5"/>
                </Grid>
            </StackPanel>
        </Border>   

        <!-- Панель поиска книг -->
        <GroupBox Grid.Row="2" 
                  Header="Поиск книги" 
                  Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Название:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0"/>
                <TextBox x:Name="TitleSearchTextBox" 
                         Width="150" 
                         Height="25"
                         Padding="5"
                         Margin="0,0,15,0"/>

                <TextBlock Text="Автор:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0"/>
                <TextBox x:Name="AuthorSearchTextBox" 
                         Width="150" 
                         Height="25"
                         Padding="5"
                         Margin="0,0,15,0"/>

                <TextBlock Text="Жанр:" 
                           VerticalAlignment="Center" 
                           Margin="0,0,5,0"/>
                <TextBox x:Name="GenreTextBox" 
                          Width="120" 
                          Height="25"
                          Margin="0,0,15,0"/>

                <Button x:Name="SearchButton" 
                        Content="Поиск" 
                        Padding="10,5"
                        Margin="0,0,10,0"
                        Click="SearchButton_Click"/>

                <Button x:Name="ResetButton" 
                        Content="Сброс" 
                        Padding="10,5"
                        Click="ResetButton_Click"/>
            </StackPanel>
        </GroupBox>

        <DataGrid x:Name="BooksDataGrid" 
                  Grid.Row="3" 
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  SelectionChanged="BooksDataGrid_SelectionChanged"
                  Margin="0,0,0,15">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Название" 
                                  Binding="{Binding Title}" 
                                  Width="200"/>
                <DataGridTextColumn Header="Автор" 
                                  Binding="{Binding Author}" 
                                  Width="150"/>
                <DataGridTextColumn Header="Жанр" 
                                  Binding="{Binding Genre}" 
                                  Width="100"/>
                <DataGridTextColumn Header="Доступно" 
                                  Binding="{Binding AvailableCopies}" 
                                  Width="70"/>
                <DataGridTextColumn Header="Стоимость проката" 
                                  Binding="{Binding RentalCost, StringFormat={}{0} руб./день}" 
                                  Width="120"/>
                <DataGridTextColumn Header="Залог" 
                                  Binding="{Binding Deposit, StringFormat={}{0} руб/день.}" 
                                  Width="100"/>
            </DataGrid.Columns>
        </DataGrid>

        <Border Grid.Row="4" 
                BorderBrush="LightGreen" 
                BorderThickness="1" 
                Background="Honeydew" 
                Padding="10" 
                Margin="0,0,0,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Выбранная книга:" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock x:Name="SelectedBookDetails"
                               FontWeight="Bold"/>
                </StackPanel>

                <StackPanel Grid.Column="2" 
                            HorizontalAlignment="Right">
                    <TextBlock Text="Расчет стоимости:" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   Text="Залог:" 
                                   Margin="0,0,10,2"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" 
                                   x:Name="DepositAmountText" 
                                   Text="0 руб"/>

                        <Rectangle Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                   Height="1" 
                                   Fill="LightGray" 
                                   Margin="0,5,0,5"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   Text="Итого к оплате:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,10,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" 
                                   x:Name="TotalAmountText" 
                                   FontWeight="Bold" 
                                   FontSize="14" 
                                   Foreground="Green"/>
                    </Grid>
                </StackPanel>
            </Grid>
        </Border>

        <StackPanel Grid.Row="5" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right">

            <Button x:Name="IssueBookButton" 
                    Content="Оформить выдачу" 
                    Padding="15,5"
                    Margin="0,0,10,0"
                    Click="IssueBookButton_Click"
                    IsEnabled="False"
                    Background="Green"
                    Foreground="White"/>

            <Button x:Name="CloseButton" 
                    Content="Закрыть" 
                    Padding="15,5"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>