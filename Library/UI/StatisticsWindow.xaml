<Window x:Class="UI.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:oxy="http://oxyplot.org/wpf"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Статистика библиотеки" Height="650" Width="900"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Статистика библиотеки" 
                   FontSize="20" FontWeight="Bold" Margin="0,0,0,10"
                   HorizontalAlignment="Center"/>

        <TabControl Grid.Row="1">
            <!-- Вкладка 1: Круговая диаграмма по возрастам -->
            <TabItem Header="Возраст читателей">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="300"/>
                    </Grid.ColumnDefinitions>

                    <oxy:PlotView x:Name="AgePlotView" Margin="20"/>

                    <StackPanel Grid.Column="1" Margin="10">
                        <TextBlock Text="Детализация:" FontWeight="Bold" Margin="0,0,0,10"/>
                        <ListView x:Name="AgeStatsListView" Height="300">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Возраст" Width="120" DisplayMemberBinding="{Binding AgeRange}"/>
                                    <GridViewColumn Header="Кол-во" Width="60" DisplayMemberBinding="{Binding Count}"/>
                                    <GridViewColumn Header="%" Width="50" DisplayMemberBinding="{Binding Percent}"/>
                                </GridView>
                            </ListView.View>
                        </ListView>

                        <Border Background="LightBlue" Margin="0,10,0,0" Padding="10" CornerRadius="5">
                            <StackPanel>
                                <TextBlock Text="Итоги:" FontWeight="Bold" Margin="0,0,0,5"/>
                                <TextBlock x:Name="TotalReadersText" FontSize="12"/>
                                <TextBlock x:Name="LargestCategoryText" FontSize="12"/>
                                <TextBlock x:Name="SmallestCategoryText" FontSize="12"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Вкладка 2: Столбчатая диаграмма по доходам -->
            <TabItem Header="Доходы по месяцам">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="200"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Период с:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker x:Name="StartDatePicker" Width="120" Margin="0,0,15,0"/>
                        <TextBlock Text="по:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                        <DatePicker x:Name="EndDatePicker" Width="120" Margin="0,0,15,0"/>
                        <Button Content="Применить фильтр" Width="130" Height="30"
                                Click="ApplyRevenueFilter_Click"/>
                        <Button Content="Сбросить" Width="100" Height="30"
                                Margin="10,0,0,0" Click="ResetRevenueFilter_Click"/>
                    </StackPanel>

                    <oxy:PlotView x:Name="RevenuePlotView" Grid.Row="1" Margin="10"/>

                    <DataGrid Grid.Row="2" x:Name="RevenueDataGrid" Margin="10"
                             AutoGenerateColumns="False" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Год" Binding="{Binding Year}" Width="60"/>
                            <DataGridTextColumn Header="Месяц" Binding="{Binding Month}" Width="60"/>
                            <DataGridTextColumn Header="Доход" Binding="{Binding Total, StringFormat={}{0:N0} руб.}" Width="100"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Кнопка выхода -->
        <Button Grid.Row="2" Content="Закрыть" Width="100" Height="30" 
                HorizontalAlignment="Center" Margin="0,10,0,0"
                Click="CloseButton_Click"/>
    </Grid>
</Window>